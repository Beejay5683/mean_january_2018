<body>
    <div class="container">
        <div class="row">
            <div class="col-md 6">
                <form action="/users" method="post">
                    <table class="table table-striped">
                        <thead>
                            <p>Insert your</p>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="text" name="name" placeholder="Name"></td>     
                            </tr>
