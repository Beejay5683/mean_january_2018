                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i in users) { %>
                        <tr>
                            <td><%= users[i].name %></td>
                            <td><%= users[i].age %></td>
                        </tr>
                        <% } %>

                    </tbody>
                </table>
            </div>
        </div>
